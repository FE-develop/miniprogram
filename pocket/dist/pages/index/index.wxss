.weui-flex {
  align-items: center;
}
.weui-cells {
  margin-top: 0;
  opacity: 0;
  transform: translateY(-50%);
  transition: 0.3s;
}
.weui-cells:before,
.weui-cells:after {
  display: none;
}
.weui-cells_show {
  opacity: 1;
  transform: translateY(0);
}
.weui-cell:before {
  right: 30rpx;
}
.kind-list__item {
  margin: 20rpx 0;
  background-color: #ffffff;
  border-radius: 4rpx;
  overflow: hidden;
}
.kind-list__item:first-child {
  margin-top: 0;
}
.kind-list__img {
  width: 60rpx;
  height: 60rpx;
}
.kind-list__item-hd {
  padding: 40rpx;
  transition: opacity 0.3s;
}
.kind-list__item-hd_show {
  opacity: 0.4;
}
.kind-list__item-bd {
  height: 0;
  overflow: hidden;
}
.kind-list__item-bd_show {
  height: auto;
}
.page__title.has-avatar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}
.page__title.has-avatar .user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 2rpx solid #CCC;
}
.page-index .page__ft {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #CCC;
}
.page-index .page__ft image {
  margin-right: 10rpx;
}
